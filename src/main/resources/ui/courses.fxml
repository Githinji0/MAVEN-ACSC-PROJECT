<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?> 

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="srms.ui.CoursesController"
      spacing="10">

    <padding>
        <Insets All="20"/> 
    </padding>

    <HBox spacing="10">
        <Label text="Courses" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Add Course" onAction="#addCourse"/>
        <Button text="Edit" onAction="#editCourse"/>
        <Button text="Delete" onAction="#deleteCourse"/>
    </HBox>

    <TableView fx:id="tableCourses" prefHeight="500">
        <columns>
            <TableColumn fx:id="colCode" text="Code" prefWidth="120"/>
            <TableColumn fx:id="colTitle" text="Title" prefWidth="200"/>
            <TableColumn fx:id="colCredits" text="Credits" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>