<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="srms.ui.MainController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox spacing="40" prefWidth="180" style="-fx-background-color: #1d1b1fff; -fx-padding: 20;">
            <children>
                <Label text="SRMS" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />

                <Button text="Students" onAction="#showStudents"
                        style="-fx-pref-width: 160; -fx-background-color: transparent; -fx-text-fill: white;" />

                <Button text="Courses" onAction="#showCourses"
                        style="-fx-pref-width: 160; -fx-background-color: transparent; -fx-text-fill: white;" />

                <Button text="Enrollments" onAction="#showEnrollments"
                        style="-fx-pref-width: 160; -fx-background-color: transparent; -fx-text-fill: white;" />

                <Button text="Reports" onAction="#showReports"
                        style="-fx-pref-width: 160; -fx-background-color: transparent; -fx-text-fill: white;" />
            </children>
        </VBox>
    </left>

    <!-- CENTER CONTENT AREA -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #f0f0f0;" />
    </center>

</BorderPane>
